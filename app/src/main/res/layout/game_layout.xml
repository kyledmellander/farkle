<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/T"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <kyledmellander.farkle.FontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 1"
        android:layout_gravity="center_horizontal"
        android:id="@+id/playerTurnView"
        android:textSize="44sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_alignBottom="@+id/die1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <kyledmellander.farkle.FontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 550"
        android:layout_gravity="center_horizontal"
        android:id="@+id/scoreView"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_below="@+id/playerTurnView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <kyledmellander.farkle.FontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Round: 0"
        android:layout_gravity="center_horizontal"
        android:id="@+id/roundScoreView"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_below="@+id/scoreView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <kyledmellander.farkle.FontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top: Player 2: 800"
        android:layout_gravity="center_horizontal"
        android:id="@+id/topScoreView"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_above="@id/rulesButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/die1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:src="@drawable/ic_1" />

    <ImageView
        android:id="@+id/die2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:src="@drawable/ic_2" />

    <ImageView
        android:id="@+id/die3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:src="@drawable/ic_3" />

    <ImageView
        android:id="@+id/die4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:src="@drawable/ic_4" />

    <ImageView
        android:id="@+id/die5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:src="@drawable/ic_5" />

    <ImageView
        android:id="@+id/die6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:src="@drawable/ic_6" />

    <kyledmellander.farkle.FontButton
        android:id="@+id/rollButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Roll (Must Select 1+ dice)"
        android:textAlignment="center"
        android:layout_above="@+id/endTurnButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <kyledmellander.farkle.FontButton
        android:id="@+id/endTurnButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Score, EndTurn"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <kyledmellander.farkle.FontButton
        android:id="@id/rulesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rules"
        android:textAlignment="center"
        android:layout_above="@+id/rollButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>