<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kyledmellander.farkle.TitleScreen"
    android:orientation="vertical"
    android:focusable="false">

    <kyledmellander.farkle.FontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Farkle"
        android:layout_gravity="center_horizontal"
        android:id="@+id/titleText"
        android:textSize="64sp"
        android:textColor="@color/black"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center|fill_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_1"
            android:elevation="1dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_2"
            android:id="@+id/imageView"
            android:elevation="1dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_3"
            android:id="@+id/imageView2"
            android:elevation="1dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_4"
            android:id="@+id/imageView3"
            android:elevation="1dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_5"
            android:id="@+id/imageView4"
            android:elevation="1dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_6"
            android:id="@+id/imageView5"
            android:adjustViewBounds="false"
            android:elevation="1dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical">

        <kyledmellander.farkle.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Number of Players:    "
            />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <kyledmellander.farkle.FontButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start/Resume"
        android:id="@+id/startGameButton"
        />

    <kyledmellander.farkle.FontButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Restart"
        android:id="@+id/resetButton"
        />

    <kyledmellander.farkle.FontButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rules"
        android:id="@+id/rulesButton"
        />



</LinearLayout>
